rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to the vendors collection
    match /vendors/{document=**} {
      allow read, write: if true;
    }

    // Allow read/write access to vendor_activities
    match /vendor_activities/{document=**} {
      allow read, write: if true;
    }
    
    match /outreach_queue/{queueId} {
      allow read, write: if true;
    }

    // Templates collection (read-only for frontend, write for admin)
    match /templates/{templateId} {
      allow read: if true; // Allow all reads for now
      allow write: if true; // TODO: Restrict to admin users
    }

    // Agent configs collection
    match /agent_configs/{agentId} {
      allow read: if true;
      allow write: if true; // TODO: Restrict to admin users
    }
    
    // Default deny for other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
