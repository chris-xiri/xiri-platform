{
    "name": "xiri-platform",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "node scripts/sync-env.js && turbo dev --parallel",
        "sync:env": "node scripts/sync-env.js",
        "dev:public": "npm run dev -w @xiri/public-site",
        "dev:dash": "npm run dev -w @xiri/dashboard",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "@types/node-fetch": "^2.6.13",
        "firebase-tools": "^15.5.1",
        "prettier": "latest",
        "turbo": "latest",
        "typescript": "^5.0.0"
    },
    "engines": {
        "node": ">=22"
    },
    "dependencies": {
        "@radix-ui/react-label": "^2.1.8",
        "firebase-admin": "^13.6.0",
        "node-fetch": "^2.7.0"
    },
    "overrides": {
        "react": "19.2.3",
        "react-dom": "19.2.3",
        "@types/react": "npm:types-react@19.0.0-rc.1",
        "@types/react-dom": "npm:types-react-dom@19.0.0-rc.1"
    },
    "packageManager": "npm@10.8.2"
}