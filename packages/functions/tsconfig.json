{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "target": "es2018",
        "esModuleInterop": true // Ensure this is true for commonjs
    },
    "compileOnSave": true,
    "include": [
        "src"
    ]
}