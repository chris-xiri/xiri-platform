{
    "name": "@xiri/functions",
    "version": "1.0.0",
    "main": "lib/index.js",
    "scripts": {
        "build": "tsup",
        "watch": "tsup --watch",
        "dev": "concurrently \"tsup --watch\" \"npm run serve\" \"node ../../scripts/wait-and-seed.js\"",
        "serve": "firebase emulators:start --config ../../firebase.json --import=../../firebase-data --export-on-exit",
        "shell": "firebase functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log"
    },
    "engines": {
        "node": "22"
    },
    "dependencies": {
        "@google-cloud/tasks": "^6.2.1",
        "@google/generative-ai": "^0.24.1",
        "axios": "^1.13.4",
        "cheerio": "^1.2.0",
        "cors": "^2.8.5",
        "date-fns": "^4.1.0",
        "date-fns-tz": "^3.2.0",
        "dotenv": "^17.2.3",
        "firebase-admin": "^13.6.0",
        "firebase-functions": "^7.0.5",
        "nodemailer": "^7.0.13",
        "pdf-lib": "^1.17.1",
        "resend": "^6.9.2",
        "telegraf": "^4.16.3",
        "twilio": "^5.12.0",
        "uuid": "^11.1.0"
    },
    "devDependencies": {
        "@types/nodemailer": "^7.0.9",
        "@types/uuid": "^10.0.0",
        "concurrently": "^9.2.1",
        "tsup": "^8.5.1",
        "typescript": "^5.0.0"
    },
    "private": true
}
