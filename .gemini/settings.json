{
    "mcpServers": {
        "firebase": {
            "command": "npx",
            "args": [
                "-y",
                "firebase-tools@latest",
                "mcp"
            ],
            "env": {
                "FIREBASE_PROJECT": "xiri-platform"
            }
        },
        "resend": {
            "command": "npx",
            "args": [
                "-y",
                "resend-mcp@latest"
            ],
            "env": {
                "RESEND_API_KEY": "${RESEND_API_KEY}"
            }
        },
        "gcloud": {
            "command": "npx",
            "args": [
                "-y",
                "@anthropic-ai/gcloud-mcp@latest"
            ]
        }
    }
}